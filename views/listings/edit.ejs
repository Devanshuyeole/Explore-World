<%layout("/layouts/boilerplate") %>
<div class="row mt-3"> <!--mt  :top margin-->
    <div class="col-8 offset-2">
<h1>Edit Your Listing</h1>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required name="listing[title]" value="<%=listing.title%>" type="text" class="form-control">
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <br><br>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required name="listing[description]" class="form-control"><%=listing.description%></textarea>
            <div class="invalid-feedback">Description should be valid</div>
        </div>
        <br><br>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input required name="listing[image]" value="<%=listing.image%>" type="text" class="form-label">
            <div class="invalid-feedback">Image should be valid</div>
        </div>
        <br><br>

        <div class="mb-3"> <!---md  :medium-->
            <label for="price" class="form-label">Price</label>
            <input required name="listing[price]" value="<%=listing.price%>" type="number" class="form-label">
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        <br><br>

        <div class="row-3">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location</label>
                <input required name="listing[location]" value="<%=listing.location%>" type="text" class="form-label">
                <div class="invalid-feedback">Location should be valid</div>
            </div>
            <br><br>
    
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input required name="listing[country]" value="<%=listing.country%>" type="text" class="form-label">
                <div class="invalid-feedback">Country should be valid</div>
            </div>
            <br><br>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>
</div>